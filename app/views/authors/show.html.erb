<h1><%=@author.name%></h1>
<div class="box">
  <div class="columns">
    <div class="column">
      <div class="field">
        <label class="label">First Name</label>
        <div class="control">
          <%= form_for(@author) do |f| %><%= f.text_field :firstname,onchange:'this.form.submit();',:class=>"input" %><%end%>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <label class="label">Last Name</label>
        <div class="control">
          <%= form_for(@author) do |f| %><%= f.text_field :lastname,onchange:'this.form.submit();',:class=>"input" %><%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="box">
  <h2>Books by <%=@author.name %></h2>
  <% @author.books.each do |b| %>
    <div class="box">
      <div class="columns">
        <div class="column is-2">
          <%=link_to b.title,b %>
        </div>
        <div class="column is-1">
          <%if b.cat_ddc != nil %><%=link_to b.cat_ddc,"/books/search/dewey/"+b.cat_ddc[0..2]%><%end %>
        </div>
        <div class="column is-1">
          <%=b.cat_loc%>
        </div>
      </div>
    </div>
  <% end %>
</div>